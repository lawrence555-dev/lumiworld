        "targetAge": 4,
        "focusAreas": [
            "STEAM",
            "Logic",
            "English",
            "Problem Solving"
        ],
        "weeks": [
            {
                "weekNumber": 1,
                "title": "Colors & Shapes",
                "theme": "Basic Recognition",
                "learningObjectives": [
                    "Identify primary colors (Red, Blue, Yellow)",
                    "Recognize basic shapes (Circle, Square, Triangle)",
                    "Match objects by color and shape"
                ],
                "activities": [
                    {
                        "id": "w1_activity1",
                        "type": "drag-and-drop",
                        "title": "Color Matching",
                        "description": "Drag colored balls into matching buckets",
                        "difficulty": "easy",
                        "items": [
                            {
                                "id": "red_ball",
                                "type": "red",
                                "label": "Red Ball"
                            },
                            {
                                "id": "blue_ball",
                                "type": "blue",
                                "label": "Blue Ball"
                            },
                            {
                                "id": "yellow_ball",
                                "type": "yellow",
                                "label": "Yellow Ball"
                            }
                        ],
                        "dropZones": [
                            {
                                "id": "red_bucket",
                                "acceptTypes": [
                                    "red"
                                ],
                                "label": "Red Bucket"
                            },
                            {
                                "id": "blue_bucket",
                                "acceptTypes": [
                                    "blue"
                                ],
                                "label": "Blue Bucket"
                            },
                            {
                                "id": "yellow_bucket",
                                "acceptTypes": [
                                    "yellow"
                                ],
                                "label": "Yellow Bucket"
                            }
                        ]
                    },
                    {
                        "id": "w1_activity2",
                        "type": "drag-and-drop",
                        "title": "Shape Sorting",
                        "description": "Put shapes in the right boxes",
                        "difficulty": "easy",
                        "items": [
                            {
                                "id": "circle1",
                                "type": "circle",
                                "label": "Circle"
                            },
                            {
                                "id": "square1",
                                "type": "square",
                                "label": "Square"
                            },
                            {
                                "id": "triangle1",
                                "type": "triangle",
                                "label": "Triangle"
                            }
                        ],
                        "dropZones": [
                            {
                                "id": "circle_box",
                                "acceptTypes": [
                                    "circle"
                                ],
                                "label": "Circle Box"
                            },
                            {
                                "id": "square_box",
                                "acceptTypes": [
                                    "square"
                                ],
                                "label": "Square Box"
                            },
                            {
                                "id": "triangle_box",
                                "acceptTypes": [
                                    "triangle"
                                ],
                                "label": "Triangle Box"
                            }
                        ]
                    }
