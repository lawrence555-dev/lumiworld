                    }
                ],
                "vocabulary": [
                    "pattern",
                    "next",
                    "repeat",
                    "same",
                    "different"
                ]
            },
            {
                "weekNumber": 6,
                "title": "Opposites",
                "theme": "Concept Pairing",
                "learningObjectives": [
                    "Understand opposite concepts",
                    "Match opposite pairs",
                    "Use opposite words in context"
                ],
                "activities": [
                    {
                        "id": "w6_activity1",
                        "type": "drag-and-drop",
                        "title": "Find the Opposite",
                        "description": "Match items with their opposites",
                        "difficulty": "hard"
                    }
                ],
                "vocabulary": [
                    "hot",
                    "cold",
                    "up",
                    "down",
                    "day",
                    "night"
                ]
