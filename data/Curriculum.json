            },
            {
                "weekNumber": 8,
                "title": "Story Sequencing",
                "theme": "Narrative Logic",
                "learningObjectives": [
                    "Understand story order (beginning, middle, end)",
                    "Sequence events logically",
                    "Retell simple stories"
                ],
                "activities": [
                    {
                        "id": "w8_activity1",
                        "type": "drag-and-drop",
                        "title": "Story Order",
                        "description": "Put the pictures in the right order",
                        "difficulty": "hard"
                    }
                ],
                "vocabulary": [
                    "first",
                    "then",
                    "next",
