                "vocabulary": [
                    "red",
                    "blue",
                    "yellow",
                    "circle",
                    "square",
                    "triangle"
                ]
            },
            {
                "weekNumber": 2,
                "title": "Numbers 1-5",
                "theme": "Counting Basics",
                "learningObjectives": [
                    "Count from 1 to 5",
                    "Match numbers with quantities",
                    "Understand one-to-one correspondence"
                ],
                "activities": [
                    {
                        "id": "w2_activity1",
                        "type": "drag-and-drop",
                        "title": "Count the Apples",
                        "description": "Drag the correct number to match the apples",
                        "difficulty": "easy"
                    }
                ],
                "vocabulary": [
                    "one",
                    "two",
                    "three",
                    "four",
                    "five"
                ]
            },
            {
                "weekNumber": 3,
                "title": "Animals & Sounds",
                "theme": "Nature Exploration",
                "learningObjectives": [
                    "Identify common animals",
                    "Match animals with their sounds",
                    "Learn animal names in English"
                ],
                "activities": [
                    {
                        "id": "w3_activity1",
                        "type": "drag-and-drop",
                        "title": "Animal Homes",
