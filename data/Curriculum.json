            {
                "weekNumber": 7,
                "title": "Simple Machines",
                "theme": "STEAM Introduction",
                "learningObjectives": [
                    "Identify simple tools (lever, wheel)",
                    "Understand cause and effect",
                    "Basic problem solving"
                ],
                "activities": [
                    {
                        "id": "w7_activity1",
                        "type": "drag-and-drop",
                        "title": "Fix the Machine",
                        "description": "Put the parts in the right place",
                        "difficulty": "hard"
                    }
                ],
                "vocabulary": [
                    "push",
                    "pull",
                    "turn",
                    "wheel",
                    "lever"
